<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hucanhui.finaldesign">


    <uses-permission android:name="android.permission.CAMERA"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"></uses-permission>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.hucanhui.finaldesign.SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.hucanhui.finaldesign.MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.hucanhui.finaldesign.DrawActivity"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.hucanhui.finaldesign.PreviewActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.hucanhui.finaldesign.BrowseActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.hucanhui.finaldesign.WebActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.hucanhui.finaldesign.AboutActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>