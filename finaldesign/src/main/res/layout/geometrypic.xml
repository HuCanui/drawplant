<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id = "@+id/geometrytool"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
	         android:layout_width="50dp"
	         android:layout_height="25dp"  
	         android:layout_gravity="center"         
	         android:src="@drawable/graphictextgraphic"/>
        <HorizontalScrollView 
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_gravity="center"
	        android:scrollbars="none">
	        <LinearLayout
	            android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:id = "@+id/graphiclist"
			    android:orientation="horizontal">
			    <ImageView
			        android:id="@+id/graphic_line"
				    android:layout_width="30dp"
				    android:layout_height="30dp"
				    android:padding="5dp"
				    android:layout_marginTop="5dp"
				    android:layout_marginBottom="5dp"
				    android:src="@drawable/graphic_line"></ImageView>
			    <ImageView
			        android:id="@+id/graphic_oval"
				    android:layout_width="30dp"
				    android:layout_height="30dp"
				    android:padding="5dp"
				    android:layout_marginTop="5dp"
				    android:layout_marginBottom="5dp"
				    android:src="@drawable/graphic_oval"></ImageView>
			    <ImageView
			        android:id="@+id/graphic_rectangle"
				    android:layout_width="30dp"
				    android:layout_height="30dp"
				    android:padding="5dp"
				    android:layout_marginTop="5dp"
				    android:layout_marginBottom="5dp"
				    android:src="@drawable/graphic_rectangle"></ImageView>
			    <ImageView
			        android:id="@+id/graphic_roundedrectangle"
				    android:layout_width="30dp"
				    android:layout_height="30dp"
				    android:padding="5dp"
				    android:layout_marginTop="5dp"
				    android:layout_marginBottom="5dp"
				    android:src="@drawable/graphic_roundedrectangle"></ImageView>
			    <ImageView
			        android:id="@+id/graphic_triangle"
			        android:layout_width="30dp"
				    android:layout_height="30dp"
				    android:padding="5dp"
				    android:layout_marginTop="5dp"
				    android:layout_marginBottom="5dp"
			        android:src="@drawable/graphic_triangle"></ImageView>
				<ImageView
				    android:id="@+id/graphic_righttriangle"
				    android:layout_width="30dp"
				    android:layout_height="30dp"
				    android:padding="5dp"
				    android:layout_marginTop="5dp"
				    android:layout_marginBottom="5dp"
				    android:src="@drawable/graphic_righttriangle"></ImageView>
				<ImageView
				    android:id="@+id/graphic_diamond"
				    android:layout_width="30dp"
				    android:layout_height="30dp"
				    android:padding="5dp"
				    android:layout_marginTop="5dp"
				    android:layout_marginBottom="5dp"
				    android:src="@drawable/graphic_diamond"></ImageView>
				<ImageView
				    android:id="@+id/graphic_pentagon"
				    android:layout_width="30dp"
				    android:layout_height="30dp"
				    android:padding="5dp"
				    android:layout_marginTop="5dp"
				    android:layout_marginBottom="5dp"
				    android:src="@drawable/graphic_pentagon"></ImageView>
				<ImageView
				    android:id="@+id/graphic_hexagon"
				    android:layout_width="30dp"
				    android:layout_height="30dp"
				    android:padding="5dp"
				    android:layout_marginTop="5dp"
				    android:layout_marginBottom="5dp"
				    android:src="@drawable/graphic_hexagon"></ImageView>
				<ImageView
				    android:id="@+id/graphic_star"
				    android:layout_width="30dp"
				    android:layout_height="30dp"
				    android:padding="5dp"
				    android:layout_marginTop="5dp"
				    android:layout_marginBottom="5dp"
				    android:src="@drawable/graphic_star"></ImageView>
	        </LinearLayout>
	    </HorizontalScrollView> 
    </LinearLayout> 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
	         android:layout_width="50dp"
	         android:layout_height="25dp"  
	         android:layout_gravity="center"         
	         android:src="@drawable/graphictextcolor"/>
        <ImageView
            android:id="@+id/graphiccolorview"
			android:layout_width="60dp"
			android:layout_height="20dp"
			android:layout_marginLeft="5dp"
			android:layout_marginTop="10dp"
			android:layout_marginRight="5dp"
			android:layout_marginBottom="10dp"
			android:background="#ff000000"></ImageView>
         <Button
            android:id="@+id/graphiccolorbtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
            android:text="choose"></Button>
         <ImageView
	        android:layout_width="50dp"
	        android:layout_height="25dp"  
	        android:layout_gravity="center"   
	        android:layout_marginLeft="20dp"      
	        android:src="@drawable/graphictextstroke"/>
         <CheckBox
             android:id="@+id/strokckb"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:checked="true"></CheckBox>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
	         android:layout_width="50dp"
	         android:layout_height="25dp"  
	         android:layout_gravity="center"        
	         android:src="@drawable/graphictextsize"/>
        <SeekBar 
            android:id="@+id/graphicsizeskb"
            android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"  
	        android:layout_marginLeft="5dp"
			android:layout_marginRight="20dp"
	        android:max="50"
	        android:progress="10"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/graphicdrawbtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="点击绘制"></Button>
    </LinearLayout>
 </LinearLayout>
