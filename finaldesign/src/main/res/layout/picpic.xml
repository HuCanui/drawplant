<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id = "@+id/pictool"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
	        android:layout_height="25dp" 
	        android:layout_gravity="center"        
	        android:src="@drawable/pictextbackground">
        </ImageView> 
        <ImageView 
            android:id ="@+id/picstorage_background"
            android:layout_width="60dp"
            android:layout_height="60dp" 
            android:layout_gravity="center"           
            android:src="@drawable/picstorage">
        </ImageView> 
        <ImageView
             android:id ="@+id/piccamera_background"
	         android:layout_width="60dp"
	         android:layout_height="60dp"  
	         android:layout_gravity="center"   
	         android:layout_marginLeft="10dp"      
	         android:src="@drawable/piccamera">
        </ImageView>  
    </LinearLayout>     
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
	        android:layout_height="25dp" 
	        android:layout_gravity="center"        
	        android:src="@drawable/pictextsticker">
        </ImageView> 
        <ImageView 
            android:id ="@+id/picstorage_sticker"
            android:layout_width="60dp"
            android:layout_height="60dp" 
            android:layout_gravity="center"           
            android:src="@drawable/picstorage">
        </ImageView> 
        <ImageView
             android:id ="@+id/piccamera_sticker"
	         android:layout_width="60dp"
	         android:layout_height="60dp"  
	         android:layout_gravity="center"   
	         android:layout_marginLeft="10dp"      
	         android:src="@drawable/piccamera">
        </ImageView>  
    </LinearLayout>     
</LinearLayout>
